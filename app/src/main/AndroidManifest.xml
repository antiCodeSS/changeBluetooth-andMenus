<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.staj.laresapp">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LaresApp">
        <activity
            android:name=".OlcumActivity"
            android:label="Ölçüm Ekranı"/>
        <activity
            android:name=".BaglantiActivity"
            android:label="@string/activity_baglanti" />
        <activity
            android:name=".HakkindaActivity"
            android:label="@string/activity_hakkinda" />
        <activity
            android:name=".KoordinatActivity"
            android:label="@string/activity_koordinat" />
        <activity
            android:name=".TersCozumActivity"
            android:label="@string/activity_ters_cozum" />

        <activity
            android:name=".VerilerActivity"
            android:label="@string/activity_veriler" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".WiresActivity"
            android:label="@string/activity_wires"></activity>
    </application>

</manifest>